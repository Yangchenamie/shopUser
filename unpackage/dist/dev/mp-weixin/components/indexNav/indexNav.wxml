<view class="container"><scroll-view class="scroll-x" scroll-y="true"><block wx:for="{{classify}}" wx:for-item="item" wx:for-index="index" wx:key="id"><view data-event-opts="{{[['tap',[['activeChanged',['$0'],[[['classify','id',item.id,'id']]]],['change',[index]]]]]}}" class="{{['items',active===index?'active':'']}}" bindtap="__e">{{item.name}}</view></block></scroll-view><scroll-view class="right-scroll-view" scroll-y="{{true}}"><block wx:for="{{goodsInfo}}" wx:for-item="item" wx:for-index="index" wx:key="id"><view data-event-opts="{{[['tap',[['show',['$0'],[[['goodsInfo','id',item.id,'id']]]]]]]}}" class="cate-rv-con" bindtap="__e"><view data-event-opts="{{[['tap',[['showPop']]]]}}" class="goods-item" bindtap="__e"><view class="goods-item-left"><image class="goods-pic" src="{{item.productPicture}}"></image></view><view class="goods-item-right"><view class="goods-name">{{item.productName}}</view><view class="goods-price">{{"$"+item.productPrice}}</view><view class="goods-num">{{"货存："+item.productStock+''}}</view></view></view></view></block></scroll-view><view hidden="{{!(flag)}}" class="uniPop vue-ref" id="uniPop" data-ref="uniPop" data-event-opts="{{[['tap',[['closeMsg',['$event']]]]]}}" bindtap="__e"><image src="{{goods.productPicture}}" mode></image><button id="trueShop" data-event-opts="{{[['tap',[['e0',['$event']]]]]}}" bindtap="__e">确认购买</button></view></view>